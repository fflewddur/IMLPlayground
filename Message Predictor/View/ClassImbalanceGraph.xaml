<UserControl x:Class="MessagePredictor.View.ClassImbalanceGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:MessagePredictor.Converters"
             mc:Ignorable="d" 
             Name="root"
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid>
        <Label Content="{Binding ElementName=root,Path=Evidence.ClassCount}" Background="{Binding ElementName=root,Path=GraphColor}" 
               HorizontalAlignment="Left" HorizontalContentAlignment="Center" Foreground="White">
            <Label.Width>
                <MultiBinding>
                    <MultiBinding.Converter>
                        <conv:GraphWidthFromCountConverter/>
                    </MultiBinding.Converter>
                    <Binding Path="Evidence.ClassCount" ElementName="root"/>
                    <Binding Path="Evidence.TotalClassCount" ElementName="root"/>
                    <Binding Path="Width" />
                </MultiBinding>
            </Label.Width>
        </Label>
    </Grid>
</UserControl>
