<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <Style x:Key="headerStyle1">
        <Setter Property="Control.FontSize" Value="16" />
        <Setter Property="Control.FontFamily" Value="Segoe UI Semibold" />
        <Setter Property="Control.Margin" Value="0 10 0 0" />
    </Style>
    <Style x:Key="headerStyle2">
        <Setter Property="Control.FontSize" Value="13" />
        <Setter Property="Control.FontFamily" Value="Segoe UI Semibold" />
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
    </Style>
    <Style x:Key="contentStyle">
        <Setter Property="Control.FontSize" Value="12" />
        <Setter Property="Control.FontFamily" Value="Segoe UI" />
    </Style>
    <Style x:Key="buttonStyle">
        <Setter Property="Control.Padding" Value="10 5" />
        <Setter Property="Control.VerticalAlignment" Value="Center" />
        <Setter Property="Control.MinWidth" Value="40" />
    </Style>
    <Style x:Key="headerStyleDialog">
        <Setter Property="Control.FontSize" Value="14"/>
        <Setter Property="Control.FontFamily" Value="Segoe UI Semibold" />
        <Setter Property="Control.Margin" Value="0 0 0 10"/>
    </Style>
    <Style x:Key="comboBoxStyle">
        <Setter Property="Control.Padding" Value="10 5"/>
    </Style>
    <Style x:Key="comboBoxItemContainerStyle">
        <Setter Property="Control.Padding" Value="10 5"/>
    </Style>
    <Style x:Key="textBoxStyle">
        <Setter Property="Control.Padding" Value="10 5"/>
    </Style>
    <ItemsPanelTemplate x:Key="importantWordsOverviewPanel">
        <WrapPanel Orientation="Horizontal" />
    </ItemsPanelTemplate>
    <DataTemplate x:Key="importantWordsOverviewItem">
        <xctk:DropDownButton Margin="5">
            <xctk:DropDownButton.DropDownContent>
                <StackPanel Orientation="Vertical">
                    <Menu>
                        <MenuItem Header="Very important" CommandParameter="{Binding Characters}" Command="{Binding FeatureVeryImportant}"/>
                        <MenuItem Header="Somewhat important" CommandParameter="{Binding Characters}" Command="{Binding FeatureSomewhatImportant}"/>
                        <Separator />
                        <MenuItem Header="Remove" CommandParameter="{Binding Characters}" Command="{Binding FeatureRemove}"/>
                        <Menu.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </Menu.ItemsPanel>
                    </Menu>
                </StackPanel>
            </xctk:DropDownButton.DropDownContent>
            <TextBlock Text="{Binding Characters}" />
        </xctk:DropDownButton>
    </DataTemplate>
</ResourceDictionary>