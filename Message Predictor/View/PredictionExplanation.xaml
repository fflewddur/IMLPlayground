<UserControl x:Class="MessagePredictor.View.PredictionExplanation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:MessagePredictor.Converters" 
             xmlns:local="clr-namespace:MessagePredictor.View" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="{Binding FolderListVM.SelectedFolder.SelectedMessage.Prediction.ImportantWordDesc}" />



        <local:EvidenceGraph Grid.Row="1">
            <local:EvidenceGraph.Evidence>
                <MultiBinding>
                    <MultiBinding.Converter>
                        <conv:DictionaryItemFromLabelConverter/>
                    </MultiBinding.Converter>
                    <Binding Path="FolderListVM.SelectedFolder.SelectedMessage.Prediction.EvidencePerClass"/>
                    <Binding Path="Labels[0]"/>
                </MultiBinding>
            </local:EvidenceGraph.Evidence>
        </local:EvidenceGraph>

        <local:EvidenceGraph Grid.Row="2">
            <local:EvidenceGraph.Evidence>
                <MultiBinding>
                    <MultiBinding.Converter>
                        <conv:DictionaryItemFromLabelConverter/>
                    </MultiBinding.Converter>
                    <Binding Path="FolderListVM.SelectedFolder.SelectedMessage.Prediction.EvidencePerClass"/>
                    <Binding Path="Labels[1]"/>
                </MultiBinding>
            </local:EvidenceGraph.Evidence>
        </local:EvidenceGraph>
        
        <Label Grid.Row="3" Content="Class imbalance explanation will go here."/>
        <Label Grid.Row="4" Content="Pie chart will go here."/>
    </Grid>
</UserControl>
